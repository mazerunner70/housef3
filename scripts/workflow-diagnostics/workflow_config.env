# Workflow Diagnostics Configuration
# Source this file to set up environment variables for the diagnostic tools

# Project configuration
export PROJECT_NAME=housef3
export ENVIRONMENT=dev
export AWS_REGION=eu-west-2

# DynamoDB table names (auto-generated from project/environment)
export OPERATIONS_TABLE="${PROJECT_NAME}-${ENVIRONMENT}-operations"
export ANALYTICS_TABLE="${PROJECT_NAME}-${ENVIRONMENT}-analytics-status"

# CloudWatch log groups
export LOG_GROUP_FILE_OPS="/aws/lambda/${PROJECT_NAME}-${ENVIRONMENT}-file-operations"
export LOG_GROUP_DELETION="/aws/lambda/${PROJECT_NAME}-${ENVIRONMENT}-file-deletion-consumer"
export LOG_GROUP_ANALYTICS="/aws/lambda/${PROJECT_NAME}-${ENVIRONMENT}-analytics-consumer"
export LOG_GROUP_CATEGORIZATION="/aws/lambda/${PROJECT_NAME}-${ENVIRONMENT}-categorization-consumer"
export LOG_GROUP_WORKFLOW_TRACKING="/aws/lambda/${PROJECT_NAME}-${ENVIRONMENT}-workflow-tracking-consumer"

# Default diagnostic settings
export DEFAULT_TIME_WINDOW_HOURS=24
export DEFAULT_MONITOR_INTERVAL=5
export DEFAULT_OPERATION_LIMIT=50

# Color output (set to 'false' to disable colors)
export ENABLE_COLORS=true

echo "Workflow diagnostics environment configured:"
echo "  Project: $PROJECT_NAME"
echo "  Environment: $ENVIRONMENT"
echo "  Region: $AWS_REGION"
echo "  Operations Table: $OPERATIONS_TABLE"
